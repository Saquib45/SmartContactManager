FROM maven:3.9.6-eclipse-temurin-17 AS build
COPY . .
RUN mvn -DskipTests package

FROM eclipse-temurin:17-jdk
COPY --from=build /target/smart-contact-manager-0.0.1-SNAPSHOT.jar.jar snapshot.jar /app/smart-contact-manager-0.0.1-SNAPSHOT.jar
EXPOSE 8081
ENTRYPOINT ["java", "-jar", "smart-contact-manager-0.0.1-SNAPSHOT.jar"]
